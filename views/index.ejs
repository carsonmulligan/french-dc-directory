<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>FrenchDC - Resources</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <nav class="bg-blue-600 p-4 text-white">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">FrenchDC</h1>
            <div class="flex items-center">
                <% if (user) { %>
                    <span class="mr-4">Welcome, <%= user.name %></span>
                    <a href="/logout" class="bg-red-500 hover:bg-red-600 px-4 py-2 rounded">Logout</a>
                <% } else { %>
                    <a href="/auth/google" class="bg-white text-blue-600 hover:bg-gray-100 px-4 py-2 rounded">Login with Google</a>
                <% } %>
            </div>
        </div>
    </nav>

    <section class="bg-gray-800 py-8">
        <div class="container mx-auto">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-2xl font-bold text-white">Featured French Videos</h2>
                <% if (user) { %>
                    <button onclick="createPlaylist()" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">
                        Create Playlist
                    </button>
                <% } %>
            </div>
            
            <div class="relative">
                <div class="flex overflow-x-auto space-x-4 pb-4" id="videoCarousel">
                    <% videos.forEach(video => { %>
                        <div class="flex-none w-96">
                            <div class="bg-white rounded-lg shadow-lg p-4">
                                <div class="relative pb-[56.25%] h-0">
                                    <iframe 
                                        class="absolute top-0 left-0 w-full h-full"
                                        src="https://www.youtube.com/embed/<%= video.video_id %>"
                                        title="<%= video.title %>"
                                        frameborder="0"
                                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                        allowfullscreen
                                    ></iframe>
                                </div>
                                <h3 class="mt-2 font-bold"><%= video.title %></h3>
                                <p class="text-sm text-gray-600"><%= video.description %></p>
                                <% if (user) { %>
                                    <button 
                                        onclick="addToPlaylist('<%= video.id %>')"
                                        class="mt-2 text-blue-600 hover:text-blue-800"
                                    >
                                        Add to Playlist
                                    </button>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </section>

    <main class="container mx-auto mt-8">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-3xl font-bold">French Language Resources in DC</h2>
            <a href="/add-resource" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">Add New Resource</a>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% 
            const groupedResources = resources.reduce((acc, resource) => {
                acc[resource.type] = acc[resource.type] || [];
                acc[resource.type].push(resource);
                return acc;
            }, {});
            %>

            <% Object.entries(groupedResources).forEach(([type, resources]) => { %>
                <h3 class="text-2xl font-bold mb-4 col-span-full"><%= type.replace('_', ' ').toUpperCase() %></h3>
                <% resources.forEach(function(resource) { %>
                    <div class="bg-white p-6 rounded-lg shadow-md">
                        <h3 class="text-xl font-bold mb-2"><%= resource.name %></h3>
                        <p><strong>Type:</strong> <%= resource.type %></p>
                        <p><strong>Website:</strong> <a href="<%= resource.website %>" target="_blank" class="text-blue-600 hover:underline"><%= resource.website %></a></p>
                        <% if (resource.locations) { %>
                            <p><strong>Locations:</strong> <%= resource.locations %></p>
                        <% } %>
                        <p><%= resource.description %></p>
                        <div class="flex items-center mt-4">
                            <form action="/resource/<%= resource.id %>/upvote" method="POST">
                                <button type="submit" class="text-green-500 mr-2">▲</button>
                            </form>
                            <span class="mr-2"><%= resource.upvotes %></span>
                            <form action="/resource/<%= resource.id %>/downvote" method="POST">
                                <button type="submit" class="text-red-500 mr-2">▼</button>
                            </form>
                            <span><%= resource.downvotes %></span>
                        </div>
                        <a href="/resource/<%= resource.id %>" class="mt-4 inline-block text-blue-600 hover:underline">View Details</a>
                    </div>
                <% }); %>
            <% }); %>
        </div>
    </main>

    <script>
        function createPlaylist() {
            const name = prompt('Enter playlist name:');
            if (name) {
                fetch('/playlist', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name })
                }).then(() => window.location.reload());
            }
        }

        function addToPlaylist(videoId) {
            fetch('/playlists')
                .then(res => res.json())
                .then(playlists => {
                    const playlistId = prompt(
                        'Enter playlist ID:\n\n' + 
                        playlists.map(p => `${p.id}: ${p.name}`).join('\n')
                    );
                    if (playlistId) {
                        return fetch('/playlist/add-video', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ playlistId, videoId })
                        });
                    }
                })
                .then(() => alert('Video added to playlist!'))
                .catch(err => console.error('Error:', err));
        }
    </script>
</body>
</html>
