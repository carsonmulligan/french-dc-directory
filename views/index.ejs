<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>FrenchDC - Resources</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <nav class="bg-blue-600 p-4 text-white">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">FrenchDC</h1>
            <div class="flex items-center">
                <% if (user) { %>
                    <span class="mr-4">Welcome, <%= user.name %></span>
                    <a href="/logout" class="bg-red-500 hover:bg-red-600 px-4 py-2 rounded">Logout</a>
                <% } else { %>
                    <a href="/auth/google" class="bg-white text-blue-600 hover:bg-gray-100 px-4 py-2 rounded">Login with Google</a>
                <% } %>
            </div>
        </div>
    </nav>

    <main class="container mx-auto mt-8">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-3xl font-bold">French Language Resources in DC</h2>
            <a href="/add-resource" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">Add New Resource</a>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% 
            const groupedResources = resources.reduce((acc, resource) => {
                acc[resource.type] = acc[resource.type] || [];
                acc[resource.type].push(resource);
                return acc;
            }, {});
            %>

            <% Object.entries(groupedResources).forEach(([type, resources]) => { %>
                <h3 class="text-2xl font-bold mb-4 col-span-full"><%= type.replace('_', ' ').toUpperCase() %></h3>
                <% resources.forEach(function(resource) { %>
                    <div class="bg-white p-6 rounded-lg shadow-md">
                        <h3 class="text-xl font-bold mb-2"><%= resource.name %></h3>
                        <p><strong>Type:</strong> <%= resource.type %></p>
                        <p><strong>Website:</strong> <a href="<%= resource.website %>" target="_blank" class="text-blue-600 hover:underline"><%= resource.website %></a></p>
                        <% if (resource.locations) { %>
                            <p><strong>Locations:</strong> <%= resource.locations %></p>
                        <% } %>
                        <p><%= resource.description %></p>
                        <div class="flex items-center mt-4">
                            <form action="/resource/<%= resource.id %>/upvote" method="POST">
                                <button type="submit" class="text-green-500 mr-2">▲</button>
                            </form>
                            <span class="mr-2"><%= resource.upvotes %></span>
                            <form action="/resource/<%= resource.id %>/downvote" method="POST">
                                <button type="submit" class="text-red-500 mr-2">▼</button>
                            </form>
                            <span><%= resource.downvotes %></span>
                        </div>
                        <a href="/resource/<%= resource.id %>" class="mt-4 inline-block text-blue-600 hover:underline">View Details</a>
                    </div>
                <% }); %>
            <% }); %>
        </div>
    </main>
</body>
</html>
